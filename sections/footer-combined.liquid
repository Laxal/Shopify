{% assign bg_image = section.settings.bg_image %}
{% if bg_image == blank %}
{% assign bg_image = 'none' %}
{% endif %}
<div style="background: url({{bg_image}})center bottom no-repeat;background-size: contain;">
	{% if section.blocks.size > 0 %}
	<div class="footer-links">
		<div class="footer-links__inner container">
			{% for block in section.blocks %}
			{% if block.type == 'Links' %}
			{% assign link_url = block.settings.link_url %}
			{% assign link_title = block.settings.link_title %}

			{% if shop.locale == 'ar' %}

			{% if block.settings.title_ar != blank %}
			{% assign title = block.settings.title_ar %}
			{% endif %}

			{% endif %}
			<a href="{{link_url}}" class="footer-links__item">
				{{link_title}}
			</a>
			{% endif %}

			{% endfor %}
		</div>
	</div>
	{% endif %}
	<!-- social -->
	<div class="footer-social">
		{% if section.settings.title !=blank %}
		{% assign title = section.settings.title %}
		{% if shop.locale == 'ar' %}
			{% if section.settings.title_ar != blank %}
				{% assign title = section.settings.title_ar %}
				{% endif %}
			{%endif%}
		
		{% if title != blank %}
		<div class="footer-social__title container">
			<div class="footer-social__title__item">
				{% assign mainIconSize = 'style=width:' | append: section.settings.icon_size | append: 'px;'%}
				{% render 'media', src: section.settings.icon,
					attributes: mainIconSize %}
			</div>
			<div class="footer-social__title__item">
				{{title}}
			</div>
			{% endif %}
		</div>
		{% endif %}
		{% if section.blocks.size > 0 %}
		<div class="footer-social__icons">
			<div class="footer-social__icons__inner container">
				{% for block in section.blocks %}
				{% if block.type == 'Social_icon' %}
				<a href="{{ block.settings.link_url }}" target="_blank" class="footer-social__icons__item" style="min-width:{{section.settings.icon_height}}px;min-height:{{section.settings.icon_height}}px">

					{% assign variable = 'style=height:' | append: section.settings.icon_height | append: 'px;width:'
						 | append: section.settings.icon_height | append: 'px;' %}
					
					{% render 'media', src: block.settings.icon,
					attributes: variable %}
				</a>
				{% endif %}
				{% endfor %}
			</div>
		</div>
		{%endif%}
	</div>
	<!-- info -->
	{% if section.blocks.size > 0 %}
	<div class="footer-info container">
		<div class="footer-info__inner ">

			{% for block in section.blocks %}
			{% if block.type == 'Info_lonk' %}
			{% assign title = block.settings.title %}

			{% if shop.locale == 'ar' %}

			{% if block.settings.title_ar != blank %}
			{% assign title = block.settings.title_ar %}
			{% endif %}

			{% endif %}

			<a href="{{ block.settings.url }}" class="footer-info__item">
				{{ title }}
			</a>
			{% endif %}
			{% endfor %}
		</div>
	</div>

	{% endif %}
</div>



