<div>
	{% if section.blocks.size > 0 %}

	<div class="footer-info container">
		<div class="footer-info__inner ">

			{% for block in section.blocks %}

			{% assign title = block.settings.title %}

			{% if shop.locale == 'ar' %}

			{% if block.settings.title_ar != blank %}
			{% assign title = block.settings.title_ar %}
			{% endif %}

			{% endif %}

			<a href="{{ block.settings.url }}" class="footer-info__item">
				{{ title }}
			</a>

			{% endfor %}
		</div>
	</div>

	{% endif %}
</div>
{% schema %}
{
"name": "Footer links",

"blocks": [
{
"name": "Info_link",
"type": "Info_lonk",

"settings": [
{
"type": "text",
"id": "title",
"label": "Link text",
"default": "Link text"
},
{
"type": "text",
"id": "title_ar",
"label": "Link text (AR)"
},
{
"type": "url",
"id": "url",
"label": "Link"
}
]
}
]
}
{% endschema %}