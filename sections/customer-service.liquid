
{%liquid
	assign title = section.settings.title
if shop.locale == 'ar'
	if section.settings.title_ar != blank
		assign title = section.settings.title_ar
	endif
endif

%}
<div class="grid-section">
	<div id="landing_menu_parent" class="grid-section__left">
	</div>
	<div class="customer-service grid-section__right">
	  <div class="grid-section__right__container">
		<h1 class="customer-service__title">{{title}}</h1>
		<div>
		</div>
		{% if section.blocks.size >0 %}
			{% for block in section.blocks %}
				{%liquid
					assign section_title = block.settings.section_title
					assign text_id = block.settings.text_id
				  
				  if shop.locale == 'ar'
					  if block.settings.section_title_ar != blank
					  assign section_title = block.settings.section_title_ar
					endif
					  if block.settings.text_id_ar != blank
					assign text_id = block.settings.text_id_ar
					endif
				  endif
				  %}
				<div class="customer-service__text">
					{% if section_title != blank %}
					  <h2 class="customer-service__text__title">{{section_title}}</h2>
					{% endif %}
					<div class="customer-service__text__rich">{{text_id}}</div>
				  </div>
			{%endfor%}
		{%endif%}
	  </div>
	</div>
  </div>
  
  {% schema %}
	{
	  "name": "customer-service",
	  "settings": [
		  {
			  "type": "text",
			  "id": "title",
			  "label": "Section title",
			  "default": "Commercial service"
		  },
		  {
			  "type": "text",
			  "id": "title_ar",
			  "label": "Section title (AR)"
		  }
		  
	  ],
	  "blocks": [
		{
		  "type": "text",
		  "name": "Text",
		  "settings":[
			{
			  "type": "text",
			  "id": "section_title",
			  "label": "Section title"
			},
			{
			  "type": "text",
			  "id": "section_title_ar",
			  "label": "Section title (AR)"
			},
			{
			  "type": "richtext",
			  "id": "text_id",
			  "label": "Section text",
			  "default": "<p>You can contact our representative for your posts, questions, problems or suggestions about all Ipekyol Stores and products.</p>"
			},
			{
			  "type": "richtext",
			  "id": "text_id_ar",
			  "label": "Section text (AR)"
			}
		  ]
		}]
	}
  {% endschema %}
  